generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Item {
  id            String   @id @default(uuid())
  title         String   // ნივთის აღწერა (მაგ: "ფეხსაცმელი")
  Name          String   // კლიენტის სახელი
  fullName      String    
  
  phone         String   // 9955XXXXXXXX
  status        ItemStatus
  smsSent       Boolean  @default(false)
  email         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

enum ItemStatus {
  RECEIVED       // შემოსული
  IN_TRANSIT     // გზაშია
  IN_WAREHOUSE   // საწყობშია
  RELEASED       // გაცემულია
}