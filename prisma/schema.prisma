generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Item {
  id            String     @id @default(uuid())
  productNumber String     @default("") // ამანათის ნომერი
  Name          String // სახელი
  fullName      String
  phone         String // 9955XXXXXXXX
  city          String     @default("") // ქალაქი
  address       String     @default("") // მისამართი
  weight        String     @default("") // წონა (kg)
  status        ItemStatus
  smsSent       Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

enum ItemStatus {
  STOPPED // გაჩერებული
  IN_WAREHOUSE // საწყობშია
  RELEASED // გაცემულია
}
