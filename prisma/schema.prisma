generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Item {
  id            String     @id @default(uuid())
  shtrikhkodi    String     @default("") // მტრიხ კოდი
  gamomcemeli   String     @default("") // გამომცემელი
  mimgebi       String     @default("") // მიმღები
  telefoni      String     @default("") // ტელეფონი
  tsona         String     @default("") // წონა (kg)
  kalaki        String     @default("") // ქალაქი
  sakGadakhda   String     @default("") // საქ.გადახდა
  tarighi       DateTime?  // თარიღი
  status        ItemStatus // საქ. გაცვლა
  smsSent       Boolean    @default(false)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

enum ItemStatus {
  STOPPED // გაჩერებული
  IN_WAREHOUSE // საწყობშია
  RELEASED // გაცემულია
  REGION // რეგიონი
}
